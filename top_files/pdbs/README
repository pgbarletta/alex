1im:
-----
    vi im1.pdb // y borré todos los hidrógenos con: %g/          H/d
    pdb4amber -i im1.pdb -o 1im.pdb --reduce &> logfile_pdb4amber_1im
    wrote and run "leap_1im.in". logfile in "leap.log"

3im:
-----
    vi im3.pdb // y borré todos los hidrógenos con: %g/          H/d
    pdb4amber -i im3.pdb -o 3im.pdb --reduce &> logfile_pdb4amber_3im
    wrote and run "leap_3im.in". logfile in "leap.log"

3rm:
-----
    vi rm3.pdb // y borré todos los hidrógenos con: %g/          H/d
    pdb4amber -i rm3.pdb -o 3rm.pdb --reduce &> logfile_pdb4amber_3rm
    wrote and run "leap_3rm.in". logfile in "leap.log"

5rm:
-----
    vi rm5.pdb // y borré todos los hidrógenos con: %g/          H/d
    pdb4amber -i rm5.pdb -o 5rm.pdb --reduce &> logfile_pdb4amber_5rm
    wrote and run "leap_5rm.in". logfile in "leap.log"

i1:
-----
    pdb4amber -i 11i.pdb -o 1i.pdb // p/ poner la columna de elementos y así
                                   // poder borrar los hidrógenos.
    vi 1i.pdb // y borré todos los hidrógenos con:        %g/          H/d
                                                          %g/          EP/d
    pdb4amber -i 1i.pdb -o i1.pdb --reduce &> logfile_pdb4amber_i1
    wrote and run "leap_i1.in". logfile in "leap.log"

1r:
-----
    pdb4amber -i 11r.pdb -o 1r.pdb // p/ poner la columna de elementos y así
                                   // poder borrar los hidrógenos.
    vi 1r.pdb // y borré todos los hidrógenos con: %g/          H/d
                                                   %g/          EP/d
    pdb4amber -i 1r.pdb -o r1.pdb --reduce &> logfile_pdb4amber_r1
    wrote and run "leap_r1.in". logfile in "leap.log"
